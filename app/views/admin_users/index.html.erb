<% @page_title = "Admin Users" %>

  <%= link_to('<<< Back to Main Page', {:controller => 'acess', :action => 'index'}) %>

  <%= link_to('Go to Subjects', {:controller => 'subjects', :action => 'index'}, :class => 'action new') %>

  <%= link_to('Go to Sections', {:controller => 'sections', :action => 'index'}, :class => 'action new') %>
  <br/>
  <div class="admin index">
  <h2>Admin Users</h2>

  <%= link_to(image_tag("plus_sign.png", :size => '11x11', :alt => "+") + " Add New Admin", {:action => 'new'}, :class => 'action new') %>
  <div><%= pluralize(@admin_user.size, 'admin user') %> found </div>

  <table class="listing" summary="admin list">
    <tr class="header">
      <th>Name</th>
      <th>Username</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
    <% @admin_user.each do |admin| %>
    <tr>
      <td><%= admin.name %></td>
      <td><%= admin.username %></td>
      <td><%= mail_to(admin.email) %></td>

       <td class="actions">
        <%= link_to("Edit", {:action => 'edit',:id => admin.id}, :class => 'action edit') %>
        <%= link_to("Delete", {:action => 'delete', :id => admin.id}, :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>