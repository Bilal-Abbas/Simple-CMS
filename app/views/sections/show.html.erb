
<%= link_to("<<Back to the Main Page", {:action => 'index', :page_id => @page.id, :class => 'back-link'}) %>

	<div class="Section show">
		<h2>Shown Page </h2>

		<table summary="section details view">
			<tr>
				<th>Page ID:</th>
				<td><%=@section.page_id %></td>
			</tr>
			<tr>
				<th>Name:</th>
				<td><%=@section.name%></td>
			</tr>
			<tr>
				<th>Section ID:</th>
				<td><%=@section.id %></td>
			</tr>
			<tr>
				<th>Visible:</th>
				<td><%=@section.visible ? 'true' : 'false' %></td>
			</tr>
			<tr>
				<th>Content:</th>
				<td><%=@section.content %></td>
			</tr>
			<tr>
				<th>Created:</th>
				<td><%=@section.created_at %></td>
			</tr>
			<tr>
				<th>Updated:</th>
				<td><%= @section.updated_at %></td>
			</tr>
		</table>
	</div>
